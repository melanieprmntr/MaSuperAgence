{% extends 'base.html.twig' %}

{% block title %}Acheter
{% endblock %}

{% block body %}
	<div class="jumbotron p-4 bg-light">
		<div class="container">
			{{ form_start(form)}}
			<div class="row">
				<div class="col">
					{{form_row(form.minSurface)}}
				</div>
				<div class="col">
					{{form_row(form.maxPrice)}}
				</div>
				<div class="col pt-1">
				{{ form_row(form.options)}}
				</div>
				<div class="col">
					<button class="btn">Rechercher</button>
				</div>
			</div>

			{{ form_end(form)}}
		</div>
	</div>
	<div class="container text-muted mt-4 p-4 container-show">
		<h1 class="text-center">Nos biens en vente</h1>
		<div class="row">
			{% for property in properties %}
				<div class="col-md-4">
					{% include "property/_property.html.twig" %}
				</div>

			{% endfor %}
		</div>
		<div class="pagination justify-content-center" >
			{{ knp_pagination_render(properties) }}
		</div>

	</div>
{% endblock %}
