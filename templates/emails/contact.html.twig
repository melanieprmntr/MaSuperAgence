<div class="container">
	<h1>Demande de contact de
		{{contact.lastname}} {{contact.firstname}}</h1>


	<table>
		<tr>
			<td>Nom du bien : </td>
			<td>
				<a href="{{ url('property.show', {id: property.id})}}">
					{{property.title}}</a>
			</td>
		</tr>
		<tr>
			<td>Prénom : </td>
			<td>{{contact.firstname}}</td>
		</tr>
		<tr>
			<td>Nom : </td>
			<td>{{contact.lastname}}</td>
		</tr>
		<tr>
			<td>Téléphone :</td>
			<td>{{contact.phone}}</td>
		</tr>
		<tr>
			<td>Email :</td>
			<td>{{email.to[0].address}}</td>
		</tr>
		<tr>
			<td>Message : </td>
			<td>{{contact.message | nl2br}}</td>
		</tr>
	</table>
</div>
